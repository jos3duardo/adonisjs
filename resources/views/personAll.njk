{% extends 'master' %}

{% block content %}
<div class="container">
  <h1>Person all</h1>

  {{ linkToAction('PersonController.create','New Person', { class: 'btn btn-primary' } )}}
<table class="responsive-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Lastname</th>
        <th>age</th>
      </tr>
    </thead>
    <tbody>
      {% for person in people %}
        <tr>
          <td>{{ person.name }}</td>
          <td>{{ person.lastname }}</td>
          {% if person.age > 20%}
            <td>{{person.age}} - old</td>
          {% else %}
            <td>{{ person.age }}</td>
          {% endif %}

        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}

